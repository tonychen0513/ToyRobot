{
  "compilerOptions": {
      "target": "es6",
      "lib": ["es2015", "es2017"],
      "module": "commonjs",
      "outDir": "dist",
      "sourceMap": true,
      "strict": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "skipLibCheck": true,
      "typeRoots" : ["./node_modules/@types/"]
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
      "node_modules/"
  ]
}
